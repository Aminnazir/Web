<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.example"
    version   = "1.0.0">

<name>Dua Test App</name>

<description>
A simple test app.
</description>

<author href="#" email="aminnazir.net@gmail.com">
Aminnazir
</author>

<icon src="assets/icon.png" />

<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="assets/splash.png" density="land-hdpi"/>
    <splash src="assets/splash.png" density="land-ldpi"/>
    <splash src="assets/splash.png" density="land-mdpi"/>
    <splash src="assets/splash.png" density="land-xhdpi"/>

    <splash src="assets/splash.png" density="port-hdpi"/>
    <splash src="assets/splash.png" density="port-ldpi"/>
    <splash src="assets/splash.png" density="port-mdpi"/>
    <splash src="assets/splash.png" density="port-xhdpi"/>
</platform>

<platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="assets/splash.png"/>
  
</platform>

<platform name="wp8">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="assets/splash.png" width="768" height="1280"/>
</platform>

<platform name="windows8">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="assets/splash.png" width="620" height="300"/>
</platform>

<platform name="blackberry10">
    <!-- Add a rim:splash element for each resolution and locale you wish -->
    <!-- http://developer.blackberry.com/html5/documentation/rim_splash_element.html -->
    <rim:splash src="assets/splash.png"/>
</platform>


<preference name="SplashScreenDelay" value="10000" />


</widget>
